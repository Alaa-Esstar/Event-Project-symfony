{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block bodyclass %}
	class="bg-gradient-primary"
{% endblock %}
{% block login %}
	<style>
		.bg-register-image {
			background: url('/img/logo-polytech.png');
		}
	</style>


	<div class="container">
		<div class="card o-hidden border-0 shadow-lg my-5">
			<div
				class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
					<div class="col-lg-7">
						<div class="p-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-4">Créer un compte !</h1>
							</div>
							{{ form_start(registrationForm, {'attr' : {'class': 'user'}}) }}
							<div class="form-group row">
								<div class="col-sm-6 mb-3 mb-sm-0">
									{{ form_row(registrationForm.firstname) }}
								</div>
								<div class="col-sm-6">
									{{ form_row(registrationForm.lastname) }}
								</div>
							</div>
							<div class="form-group">
								{{ form_row(registrationForm.email) }}
							</div>
							<div class="form-group">
								{{ form_row(registrationForm.plainPassword) }}
							</div>

							<button type="submit" class="btn btn-primary btn-user btn-block">S'inscrire</button>
							{{ form_end(registrationForm) }}
							<hr>
							{# <div class="text-center">
																																				<a class="small" href="forgot-password.html">Forgot Password?</a>
																																			</div> #}
							<div class="text-center">
								<a class="small" href="{{ path('app_login') }}">Vous avez déjà un compte? Connexion!</a>
							</div>
							<div class="text-center">
								<a class="small" href="{{ path('app_home') }}">
									<i class="fa fa-arrow-left"></i>
									Accueil</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
